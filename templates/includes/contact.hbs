<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">{{content.contact.title}}</h2>
                <h3 class="section-subheading text-muted">{{content.contact.description}}</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form name="sentMessage" id="contactForm" novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            Téléphone: {{content.contact.phone}}<br />
                            Adresse: {{content.address}}<br />
                            Email: {{content.contact.email}}<br />
                        </div>
                        <div class="col-md-6"></div>
                        <div class="clearfix"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
